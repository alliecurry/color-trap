<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:id="@+id/tile_layout">

    <com.hutchdesign.colortrap.view.SquareView
          android:id="@+id/tile_square_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

    <View android:id="@+id/tile_player1"
          android:visibility="gone"
          android:layout_height="@dimen/piece_size"
          android:layout_width="@dimen/piece_size"
          android:background="@drawable/player"
          android:layout_centerInParent="true"/>

    <View android:id="@+id/tile_player2"
          android:visibility="gone"
          android:layout_height="@dimen/piece_size"
          android:layout_width="@dimen/piece_size"
          android:background="@drawable/player2"
          android:layout_centerInParent="true"/>

</RelativeLayout>