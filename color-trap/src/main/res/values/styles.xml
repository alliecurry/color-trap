<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColorTrap" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:background">@color/board_background</item>
    </style>

    <declare-styleable name="FontyTextView">
        <attr name="customFont" format="string"/>
    </declare-styleable>

    <style name="MenuButton">
        <item name="android:layout_width">@dimen/menu_tile_size</item>
        <item name="android:layout_height">@dimen/menu_tile_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/menu_subtitle_fontsize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MenuButton.Small">
        <item name="android:layout_width">@dimen/menu_tile_size_small</item>
        <item name="android:layout_height">@dimen/menu_tile_size_small</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/menu_settings_fontsize</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="PlayerPiece">
        <item name="android:visibility">visible</item>
        <item name="android:layout_height">@dimen/piece_size</item>
        <item name="android:layout_width">@dimen/piece_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="HelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HelpImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/help_image_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/help_image_margin_top</item>
    </style>

</resources>