<?xml version="1.0" encoding="utf-8"?>

<co.starsky.colortrap.view.SlidingRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/ColorTrapLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

    <co.starsky.colortrap.view.FontyTextView
            android:id="@+id/menu_text_title"
            app:customFont="@string/font_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@android:color/black"
            android:textSize="60sp"
            android:text="@string/app_name"
            />

    <co.starsky.colortrap.view.FontyTextView
            android:id="@+id/menu_text_subtitle"
            app:customFont="@string/font_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/menu_text_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:text="@string/menu_subtitle"/>

    <co.starsky.colortrap.view.FontyTextView
            style="@style/MenuButton"
            android:id="@+id/button_new_computer"
            app:customFont="@string/font_default"
            android:text="@string/new_game_ai"
            android:background="@color/sun_flower"
            android:layout_toLeftOf="@id/button_new_hotseat"
            android:layout_alignTop="@id/button_new_hotseat"
            />

    <co.starsky.colortrap.view.FontyTextView
            style="@style/MenuButton"
            android:id="@+id/button_new_hotseat"
            app:customFont="@string/font_default"
            android:text="@string/new_game_hotseat"
            android:background="@color/watermelon"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/menu_text_subtitle"
            android:layout_marginLeft="@dimen/menu_spacing"
            android:layout_marginRight="@dimen/menu_spacing"
            />

    <co.starsky.colortrap.view.FontyTextView
            style="@style/MenuButton"
            android:id="@+id/button_help"
            app:customFont="@string/font_default"
            android:text="@string/question_mark"
            android:background="@color/river"
            android:layout_toRightOf="@id/button_new_hotseat"
            android:layout_alignTop="@+id/button_new_hotseat"
            />


    <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

</co.starsky.colortrap.view.SlidingRelativeLayout>